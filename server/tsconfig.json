{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["server/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}

